<!DOCTYPE html>
<html>
<head>
  <title>Image resizer upload iframe</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.8.1/min/dropzone.min.js"></script>
</head>
<body>
  <style lang="scss">
    body {
      padding: 0px;
      margin: 0px;
    }

    .dropzone {
      border: 1px solid #ccf;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;

      padding:50px 20px;
      background-color:#eef;
      cursor: pointer;
      text-align: center;
    }

    .dropzone button {
      padding: 7px 15px;
    }

    .dropzone:hover { border: 1px solid #aaf;  }

    .dropzone svg { display: none; }
  </style>

  <div class="dropzone"></div>

  <script>
    Dropzone.autoDiscover = false;

    let myDropzone = new Dropzone('.dropzone', {
      paramName:     'image',
      url:           '<%= request.path %>',
      maxFilesize:   1,
      acceptedFiles: "image/*"
    });

    myDropzone.on("complete", function(response) {
      let text = response.xhr.responseText;

      if (text.indexOf('Error:') > -1) {
        Info.error(text);
      } else {
        sendMessage(text);
      }
    });

    function sendMessage(message) {
      var msg = { type: 'image-upload', url: message }
      window.parent.postMessage(JSON.stringify(msg), '*');
    }

    setTimeout(()=>{
      sendMessage('message from iframe, waiting for URL')
    }, 1000)
  </script>
</body>
</html>
